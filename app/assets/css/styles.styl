@import "nib"
@import "utils/reset"
@import "utils/mixins"

// Base ----------------------------------------------------------------------
* { box-sizing: border-box }
html
  font-size: 62.5%
  height: 100%

html, body { size: 100% }

body
  font-size: 16

body, legend, input, textarea, button
  font-family: 'Helvetica Neue'
  line-height: 1.4
  color: #333

a:link, a:visited { color: deeppink }
a:focus, a:link:hover  { color: hotpink }

p, ul, ol, dl, blockquote, table, figure { margin: 0 }

// Game ----------------------------------------------------------------------
#game
  size: 100%

// Player --------------------------------------------------------------------
.player,.enemy
  display: block
  position: absolute
  top: 0; left: 0

.player
  size: 0
  border-top: 20px solid transparent
  border-bottom: 20px solid transparent
  border-left: 50px solid black

.enemy
  size: 50px
  background-color: grey



