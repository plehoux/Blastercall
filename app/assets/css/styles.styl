@import "nib"
@import "utils/reset"
@import "utils/mixins"

// Base ----------------------------------------------------------------------
* { box-sizing: border-box }
html
  font-size: 62.5%
  height: 100%

html, body { size: 100% }

body
  font-size: 16

body, legend, input, textarea, button
  font-family: 'Helvetica Neue'
  line-height: 1.4
  color: #333

a:link, a:visited { color: deeppink }
a:focus, a:link:hover  { color: hotpink }

p, ul, ol, dl, blockquote, table, figure { margin: 0 }

// Player --------------------------------------------------------------------
.player,.enemy
  display: block
  position: absolute
  top: 0; left: 0
  opacity:0.75

.player
  size: 0
  border-top: 20px solid transparent
  border-bottom: 20px solid transparent
  border-left: 50px solid white
  z-index:999

.enemy
  size: 50px
  line-height:50px
  text-align:center
  border-radius:100%
  background-color:white

  &.spawning
    size: 10px
    margin: 20px 0 0 20px
    background-color: rgba(0,0,0,.2)
    span { display: none }

@import "layout"
