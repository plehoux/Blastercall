// Player --------------------------------------------------------------------
.player,.bomb
  display: block
  position: absolute
  top: 0; left: 0

.player
  size: 50px 40px

  .arrow
    border-top: 20px solid transparent
    border-bottom: 20px solid transparent
    border-left: 50px solid white
    z-index: 99
    position: absolute

  &.dead
    animation: flash .2s infinite

  span
    size: 1px
    display: block
    position: absolute

  .point_1 { top:0; left:0 }
  .point_2 { top:50%; left:0 }
  .point_3 { top:100%; left:0 }
  .point_4 { top:25%; left:25% }
  .point_5 { top:50%; left:25% }
  .point_6 { top:75%; left:25% }
  .point_7 { top:25%; left:50% }
  .point_8 { top:50%; left:50% }
  .point_9 { top:75%; left:50% }
  .point_10 { top:50%; left:75% }
  .point_11 { top:50%; left:100% }

.bomb
  -webkit-backface-visibility: hidden

  span
    display: block
    position: relative
    size: 50px
    border-radius:100%
    background-color:white
    font-family: 'futura-pt', 'Helvetica Neue', sans-serif
    font-size: 24
    font-weight: bold;
    line-height:50px
    text-align:center
    animation: bomb 4s alternate infinite

  &:after
    content: attr(data-from)
    display: block
    color: #fff
    font-weight: 800
    font-family: 'futura-pt', 'Helvetica Neue', sans-serif
    letter-spacing: .1em
    text-align: center

  &.explode
    opacity: 0
    -webkit-transform: scale(2)
    animation: explode .4s
    
  &.explode:after { display: none }

  &.defuse
    -webkit-transition: -webkit-transform .2s ease-in-out
    -webkit-transform: rotateY(180deg)


// Keyframes --------------------------------------------------------------------
@keyframes flash
  0%, 49%
    opacity: 0
  50%, 100%
    opacity: 1

@keyframes explode
  0%
    opacity: .75
    -webkit-transform: scale(5)
  75%
    -webkit-transform: scale(2)
  100%
    opacity: 0
    -webkit-transform: scale(1)

@keyframes bgc
  0%
    background-color: #4caf61
  33%
    background-color: #4caeaf
  67%
    background-color: #994caf
  100%
    background-color: #af4c4c

@keyframes color
  0%
    color: #4caf61
  33%
    color: #4caeaf
  67%
    color: #994caf
  100%
    color: #af4c4c
    
@keyframes bomb
  0%
    color: #333
    top: 0; right: 0; 
  80%, 85%, 90%, 95%
    top: -2px; right: 0;
  81%, 86%, 91%, 96%
